{
    "name": "ctw/ctw-middleware-htmlminifier",
    "description": "This PSR-15 middleware formats, fixes and beautifies the HTML in the Response body using a variety of adapters.",
    "license": "BSD-3-Clause",
    "type": "library",
    "require": {
        "php": "^8.3",
        "ext-tidy": "*",
        "ctw/ctw-middleware": "^4.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ctw/ctw-qa": "^4.0",
        "phpunit/phpunit": "^12.0",
        "symfony/var-dumper": "^7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Ctw\\Middleware\\HtmlMinifierMiddleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CtwTest\\Middleware\\HtmlMinifierMiddleware\\": "test"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "ecs": "php vendor/bin/ecs --clear-cache",
        "ecs-fix": "php vendor/bin/ecs --clear-cache --fix",
        "phpstan": "d=build/phpstan ; rm -fr $d ; mkdir -p $d ; php vendor/bin/phpstan analyse --error-format=raw | tee $d/output.txt",
        "phpstan-baseline": "php vendor/bin/phpstan analyse --generate-baseline",
        "qa": [
            "@rector",
            "@ecs",
            "@phpstan"
        ],
        "qa-fix": [
            "@rector-fix",
            "@ecs-fix",
            "@phpstan"
        ],
        "rector": "php vendor/bin/rector process --clear-cache --dry-run",
        "rector-fix": "php vendor/bin/rector process --clear-cache",
        "test": "php vendor/bin/phpunit"
    }
}
